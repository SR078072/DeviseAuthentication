<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.text_field :commenter, class: "form-control", placeholder: "What is your name?" %>
  </p>
  <p>
    <%= form.text_area :body, class: "form-control", placeholder: "What do you want to comment?" %>
  </p>
  <p>
    <%= form.submit(class: "btn btn-success") %>
  </p>
<% end %>