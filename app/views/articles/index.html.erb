<div class="container text-center">

<h1 class="display-4" style="font-family: Impact, Charcoal, sans-serif;">Shashankit's Blog</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Text</th>
      <th scope="col">Link1</th>
      <th scope="col">Link2</th>
      <th scope="col">Link3</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning" %></td>
      <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: "Confirm delete article?" }, class: "btn btn-danger"%></td>
    </tr>
    <% end%>
  </tbody>
</table>
<br>

<%= link_to 'New article', new_article_path, class: "btn btn-primary" %>
</div>
